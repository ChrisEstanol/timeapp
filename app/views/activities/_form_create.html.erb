<%= form_for(@activity, remote: true) do |f| %>
  <div class="form-group col-sm-3">
   <%= f.collection_select(:project_id, user_projects, :id, :name, {prompt: "Select a project"}, {:class => 'form-control'}) %>
  </div>
  <div class="form-group col-sm-8">
    <%= f.text_field :description, autofocus: true, class: "form-control" %>
  </div>
  <div class="col-sm-1">
    <%= f.submit "Start" ,class: "btn btn-success", id: "add-activity" %>
  </div>
<% end %>
